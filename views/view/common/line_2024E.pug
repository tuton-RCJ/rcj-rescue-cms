        .col-1
          h1 -
        .col-3
          h1 {{(exitBonus?60:0) - exitBonusPoints()}} {{'common.point' | translate}}
        .col-1
          h1 =
        .col-4
          h1 {{exitBonusPoints()}} {{'common.point' | translate}}
      .row(ng-if="league=='LineNL'")
        .col-12
          br
          br
          h1 {{exitBonusPoints()}} {{'common.point' | translate}}
