  .row(style="display: flex;flex-wrap: wrap;")
    .col-md-9.col-lg-10
      .alert.alert-info(style='margin-bottom:30px;text-align:center;', role='alert')
        .row
          .col-md-4.col-sm-6.col-lg-3(ng-repeat="i in range(maxLiveVictims)", style="width:100%;margin:5px 0;")
